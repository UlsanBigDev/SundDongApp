<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_home_returnInquery_item_topTb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/tv_home_returnInquery_item_indexNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tb_home_returnInquery_item_topTb"
        app:layout_constraintBottom_toBottomOf="@+id/tb_home_returnInquery_item_topTb"
        app:layout_constraintStart_toStartOf="@+id/tb_home_returnInquery_item_topTb"
        android:padding="6dp"
        android:textStyle="bold"
        android:text="00" />

    <TextView
        android:id="@+id/tv_home_returnInquery_item_returnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tb_home_returnInquery_item_topTb"
        app:layout_constraintStart_toEndOf="@+id/tv_home_returnInquery_item_indexNum"
        android:padding="6dp"
        android:layout_marginTop="8dp"
        android:text="yyyy-mm-dd" />

    <Button
        android:id="@+id/btn_home_returnInquery_item_acceptanceDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tb_home_returnInquery_item_topTb"
        app:layout_constraintEnd_toEndOf="@+id/tb_home_returnInquery_item_topTb"
        android:padding="6dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/darkRed"
        android:text="인수증" />

    <Button
        android:id="@+id/btn_home_returnInquery_item_showDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tb_home_returnInquery_item_topTb"
        app:layout_constraintEnd_toStartOf="@+id/btn_home_returnInquery_item_acceptanceDocument"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/dimGray"
        android:text="상세보기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tb_home_returnInquery_item_topTb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_returnInquery_item_returnState_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="진행현황" />

            <TextView
                android:id="@+id/tv_home_returnInquery_item_returnState_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="진행현황 표시" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_returnInquery_item_name_standard_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="품목명 / 규격" />

            <TextView
                android:id="@+id/tv_home_returnInquery_item_name_standard_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="품목명 / 구격 표시" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_returnInquery_item_requestNum_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="신청번호" />

            <TextView
                android:id="@+id/tv_home_returnInquery_item_requestNum_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="신청번호 표시" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_returnInquery_item_sortation_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="구분" />

            <TextView
                android:id="@+id/tv_home_returnInquery_item_sortation_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="구분 표시" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>