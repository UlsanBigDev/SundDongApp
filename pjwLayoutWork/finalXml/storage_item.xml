<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_storage_itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:text="보관함 이름" />

    <TextView
        android:id="@+id/tv_storage_itemNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:text="물품 개수 : 00" />

    <View
        android:id="@+id/divider_storageItem_devider1"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_storage_itemTitle"
        android:layout_height="1dp"
        android:background="@color/lightGrey" />


    <TextView
        android:id="@+id/tv_storage_itemCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_storageItem_devider1"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:text="생성자 : 보관함 생성자 이름" />

    <TextView
        android:id="@+id/tv_storage_itemDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_storage_itemCreator"
        android:padding="10dp"
        android:text="보관함 내용" />

    <CheckBox
        android:id="@+id/cb_storate_itemcheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_storage_itemNum"
        android:padding="15dp"
         />

    <View
        android:id="@+id/divider_storageItem_devider2"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_storage_itemDetail"
        android:layout_height="4dp"
        android:background="@color/lightGrey" />


</androidx.constraintlayout.widget.ConstraintLayout>